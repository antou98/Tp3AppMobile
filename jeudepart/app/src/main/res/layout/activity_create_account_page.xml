<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".partie1.CreateAccountPage">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="235dp"
        android:layout_height="52dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:text="Inscription"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/prenomTextView"
        android:layout_width="252dp"
        android:layout_height="64dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="prenom"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/nomTextView"
        android:layout_width="258dp"
        android:layout_height="75dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="39dp"
        android:ems="10"
        android:hint="nom"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prenomTextView" />

    <EditText
        android:id="@+id/emailTextView"
        android:layout_width="250dp"
        android:layout_height="59dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="email"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomTextView" />

    <EditText
        android:id="@+id/passwordTextView"
        android:layout_width="252dp"
        android:layout_height="59dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="password"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailTextView" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="308dp"
        android:layout_height="77dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="27dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordTextView" />

    <Button
        android:id="@+id/buttonCreateNewCompte"
        android:layout_width="142dp"
        android:layout_height="59dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="43dp"
        android:text="Creer nouveau compte"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />
</androidx.constraintlayout.widget.ConstraintLayout>