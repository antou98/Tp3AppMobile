<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".partie2.Partie2">

    <EditText
        android:id="@+id/passwordTextEdit2"
        android:layout_width="275dp"
        android:layout_height="55dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="75dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/courrielEditText2"
        android:layout_width="275dp"
        android:layout_height="55dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="42dp"
        android:ems="10"
        android:hint="courriel"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordTextEdit2" />

    <Button
        android:id="@+id/buttonCreerCompte2"
        android:layout_width="276dp"
        android:layout_height="60dp"
        android:layout_marginStart="92dp"
        android:layout_marginBottom="132dp"
        android:text="Creer un nouveau compte"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonConnection2"
        android:layout_width="268dp"
        android:layout_height="60dp"
        android:layout_marginStart="92dp"
        android:layout_marginBottom="216dp"
        android:text="Connexion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>